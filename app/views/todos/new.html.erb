<!-- app/views/todos/_form.html.erb or new.html.erb -->
<h2>Add New Todo</h2>

<%= form_with model: @todo, local: false do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, class: "form-check-label" %>
  </div>

  <%= f.submit "Add Todo", class: "btn btn-primary" %>
<% end %>
